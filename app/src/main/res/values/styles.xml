<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EF6C00</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColor">@color/quantum_black_100</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#ffffffff</item>
        <item name="itemIconTint">#ffffffff</item>
        <item name="itemTextColor">#ffffffff</item>
        <item name="android:background">@drawable/ic_drawer_logo</item>
       <item name="itemTextAppearance">@style/TextDrawerStyle</item>
    </style>

    <style name="MyFAB" parent="Widget.Design.FloatingActionButton">
        <item name="colorAccent">@color/quantum_white_text</item>
    </style>

    <style name="ChatButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextStyleItalic" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/quantum_grey700</item>
    </style>

    <style name="TextDrawerStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#B55200</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="TextStyleNormal" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/quantum_black_100</item>
    </style>

    <style name="SwitchButton" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <!-- Set title to white when DetailActivity is collapsed -->
    <style name="collapsingToolbarLayoutTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="expandedToolbarTitleColor" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="chipBackground" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_color_selected</item>
        <item name="android:textAppearance">@style/chipTextAppearance</item>
    </style>

</resources>
