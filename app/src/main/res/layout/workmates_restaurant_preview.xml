<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workmate_detail_lunch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="8dp"
    android:visibility="visible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/workmate_lunch_textview">

    <ImageView
        android:id="@+id/restaurant_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="restaurant name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/details_restaurant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/restaurant_photo"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/restaurant_photo"
        app:layout_constraintTop_toTopOf="@+id/restaurant_photo"
        app:layout_constraintVertical_bias="0.3"
        tools:text="@sample/tasks.json/data_restaurants/restaurantName" />

    <TextView
        android:id="@+id/details_type_of_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_restaurant_name"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/restaurant_photo"
        app:layout_constraintStart_toStartOf="@+id/details_restaurant_name"
        app:layout_constraintTop_toBottomOf="@+id/details_restaurant_name"
        tools:text="@sample/tasks.json/data_restaurants/typeOfRestaurant" />

    <TextView
        android:id="@+id/details_restaurant_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/details_type_of_restaurant"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/details_type_of_restaurant"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/details_type_of_restaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/details_type_of_restaurant"
        app:layout_constraintTop_toTopOf="@+id/details_type_of_restaurant"
        tools:text="@sample/tasks.json/data_restaurants/address" />

    <TextView
        android:id="@+id/date_of_previous_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="15 mai 2020"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/detail_three_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/restaurant_photo"
        app:layout_constraintTop_toBottomOf="@+id/details_type_of_restaurant">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="one star"
            app:srcCompat="@drawable/ic_star_yellow_24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="two star"
            app:srcCompat="@drawable/ic_star_yellow_24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="three star"
            app:srcCompat="@drawable/ic_star_yellow_24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_two_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="6dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/restaurant_photo"
        app:layout_constraintTop_toBottomOf="@+id/details_type_of_restaurant" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="one star"
            app:srcCompat="@drawable/ic_star_yellow_24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_star_yellow_24dp"
            app:layout_constraintEnd_toStartOf="@+id/one_star"
            app:layout_constraintTop_toBottomOf="@+id/nbr_of_workmates"
            android:contentDescription="two star" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_one_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="6dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/restaurant_photo"
        app:layout_constraintTop_toBottomOf="@+id/details_type_of_restaurant" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="one star"
            app:srcCompat="@drawable/ic_star_yellow_24dp" />
    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="324dp" />
</androidx.constraintlayout.widget.ConstraintLayout>