    <include
        android:id="@+id/workmate_detail_lunch"
        layout="@layout/workmates_restaurant_preview">
    </include>

    <TextView
        android:id="@+id/chat_with_workmate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bkg_message_btn"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Discuter avec Jenny"
        android:textColor="@color/quantum_white_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="10dp" />
    
    <TextView
        android:id="@+id/previous_restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/previous_restaurants"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workmate_detail_lunch" />

    <TextView
        android:id="@+id/no_previous_restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textStyle="italic"
        android:text="@string/no_previous_restaurant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previous_restaurants" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/previous_restaurants_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/previous_restaurants"
        app:layout_constraintBottom_toTopOf="@id/chat_with_workmate_btn"
        tools:listitem="@layout/workmates_restaurant_preview" />

