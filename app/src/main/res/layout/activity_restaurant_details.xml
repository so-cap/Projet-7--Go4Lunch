<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_activity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/detail_restaurant_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:contentDescription="restaurant photo" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fav_button"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|end" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E8E8"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/details_restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/quantum_white_text"
                    android:textSize="16sp"
                    tools:text="@sample/tasks.json/data_restaurants/restaurantName" />

                <TextView
                    android:id="@+id/details_type_of_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_restaurant_name"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/quantum_white_text"
                    tools:text="@sample/tasks.json/data_restaurants/typeOfRestaurant" />

                <TextView
                    android:id="@+id/details_restaurant_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/details_type_of_restaurant"
                    android:layout_toEndOf="@id/details_type_of_restaurant"
                    android:textColor="@color/quantum_white_text"
                    tools:text="@sample/tasks.json/data_restaurants/address" />


                <ImageView
                    android:id="@+id/detail_one_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/details_restaurant_name"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/details_restaurant_name"
                    android:contentDescription="one star"
                    android:src="@drawable/ic_star_yellow_24dp" />

                <ImageView
                    android:id="@+id/detail_two_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/details_restaurant_name"
                    android:layout_toEndOf="@id/detail_one_star"
                    android:contentDescription="two star"
                    android:src="@drawable/ic_star_yellow_24dp" />

                <ImageView
                    android:id="@+id/detail_three_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/details_restaurant_name"
                    android:layout_toEndOf="@id/detail_two_stars"
                    android:contentDescription="three star"
                    android:src="@drawable/ic_star_yellow_24dp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/call_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call_black_24dp"
                app:layout_constraintEnd_toStartOf="@+id/like_restaurant_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/like_restaurant_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CALL"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="@+id/call_btn"
                app:layout_constraintStart_toStartOf="@+id/call_btn"
                app:layout_constraintTop_toBottomOf="@id/call_btn" />

            <ImageView
                android:id="@+id/like_restaurant_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_star_border_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

            <TextView
                android:id="@+id/detail_like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="LIKE"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="@+id/like_restaurant_btn"
                app:layout_constraintStart_toStartOf="@id/like_restaurant_btn"
                app:layout_constraintTop_toBottomOf="@id/like_restaurant_btn" />

            <ImageView
                android:id="@+id/website_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_website_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/like_restaurant_btn"
                app:layout_constraintTop_toTopOf="@+id/like_restaurant_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WEBSITE"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="@+id/website_btn"
                app:layout_constraintStart_toStartOf="@id/website_btn"
                app:layout_constraintTop_toBottomOf="@id/website_btn" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detail_recycler_view_workmates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_like_text"
                tools:listitem="@layout/list_workmates_joining"
                tools:itemCount="2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>