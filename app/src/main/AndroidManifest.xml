<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sophieopenclass.go4lunch">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/API_KEY" />

        <activity android:name=".controllers.activities.SplashScreenActivity" android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.fragments.MapViewFragment">
        </activity>
        <activity android:name=".controllers.activities.SettingsActivity" />
        <activity android:name=".controllers.activities.MainActivity" />
        <activity android:name=".controllers.activities.RestaurantDetailsActivity" />
        <activity android:name=".controllers.activities.WorkmateDetailActivity" />
        <activity android:name=".controllers.activities.ChatActivity" />
        <activity android:name=".controllers.activities.LoginPageActivity" />
        <activity android:name=".controllers.activities.MyLunchActivity" />
    </application>

</manifest>